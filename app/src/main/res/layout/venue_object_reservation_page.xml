<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="131dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/reservationAtText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reservation_at"
            android:translationX="20dp"
            android:translationY="40dp" />

        <TextView
            android:id="@+id/reservationVenueNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/resvenuename"
            android:translationX="-100dp"
            android:translationY="60dp" />

        <TextView
            android:id="@+id/reservationDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/resdate"
            android:translationX="-20dp"
            android:translationY="40dp" />

        <TextView
            android:id="@+id/resTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/restime"
            android:translationX="-100dp"
            android:translationY="60dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>