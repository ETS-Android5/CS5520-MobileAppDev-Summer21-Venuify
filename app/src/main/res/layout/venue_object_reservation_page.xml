<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="119dp"
        android:background="@color/cardview_shadow_start_color"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/reservationAtText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reservation_venue"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="32dp" />

        <TextView
            android:id="@+id/reservationVenueNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resvenuename"
            android:translationX="-105dp"
            android:translationY="60dp" />

        <TextView
            android:id="@+id/reservationDateText"
            android:layout_width="88dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:text="@string/resdate"
            android:translationX="80dp"
            android:translationY="30dp" />

        <TextView
            android:id="@+id/resTimeText"
            android:layout_width="100dp"
            android:layout_height="31dp"
            android:layout_marginTop="16dp"
            android:text="@string/restime"
            android:translationX="-10dp"
            android:translationY="39dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="89dp"
            android:layout_height="37dp"
            android:text="@string/time"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="bold"
            android:translationX="-161dp"
            android:translationY="54dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="55dp"
            android:layout_height="33dp"
            android:text="@string/date"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="bold"
            android:translationX="-250dp"
            android:translationY="33dp" />




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>